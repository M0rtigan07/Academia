@model CursoMVC.Models.Alumno

@{
    ViewData["Title"] = "Delete";
}

<h1>ELIMINAR ALUMNO</h1>

<div class="jumbotron">

<h3 style="font-weight: bold; font-style: italic;" >¿ES SEGURO ELIMINAR EL ALUMNO?</h3>
<div>
   
    <hr  class="my-4" style="border: 2px solid ;"/>
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.AlumnoDNI)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AlumnoDNI)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.AlumnoApellidos)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AlumnoApellidos)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.AlumnoNombre)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AlumnoNombre)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="AlumnoID" />
        <input type="submit" value="ELIMINAR" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-info">REGRESAR A LA LISTA</a>
    </form>
</div>
    </div>
